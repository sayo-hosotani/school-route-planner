{
	"name": "route-planner",
	"version": "1.0.0",
	"private": true,
	"description": "OpenStreetMapを使った経路生成Webアプリケーション",
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev:backend": "npm run dev --workspace=@route-planner/backend",
		"dev:frontend": "npm run dev --workspace=@route-planner/frontend",
		"dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
		"build": "npm run build --workspaces",
		"test": "npm run test --workspaces",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"concurrently": "^9.1.2"
	},
	"engines": {
		"node": ">=20.0.0",
		"npm": ">=10.0.0"
	}
}
